<Message>:
    font_size: 25
    orientation: 'vertical'
    size_hint: 1, 0.8

    header: header
    text: text

    MDBoxLayout:
        spacing: 2
        padding: 2
        orientation: 'vertical'

        MDLabel:
            id: header
            text: ''
            allow_selection: True

        MDLabel:
            id: text
            text: ''
            size: self.size
            allow_selection: True


<Container>:
    font_size: 25
    orientation: 'vertical'
    spacing: 20
    padding: 20

    text_input: text_input

    MDBoxLayout:
        orientation: 'horizontal'

        MDTextField:
            id: text_input
            font_size: 25
            hint_text: 'Печатайте нежно'
            multiline: True
            mode: 'rectangle'

        MDIconButton:
            icon: 'send'
            icon_size: '32sp'
            on_release:
                root.send()

        MDIconButton:
            icon: 'update'
            icon_size: '32sp'
            on_release:
                root.update()
