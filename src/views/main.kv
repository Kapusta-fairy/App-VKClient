<Message>:
    font_size: 25
    orientation: 'vertical'
    spacing: 20
    padding: 4

    date: date
    owner: owner
    text: text

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'horizontal'

            MDLabel:
                id: owner
                text: ''
                allow_selection: True

            MDLabel:
                id: date
                text: ''
                allow_selection: True

        MDLabel:
            id: text
            text: ''
            allow_selection: True


<Container>:
    font_size: 25
    orientation: 'vertical'
    spacing: 20
    padding: 20

    MDBoxLayout:
        orientation: 'horizontal'

        MDTextField:
            font_size: 25
            hint_text: 'Печатайте нежно'
            multiline: True
            mode: 'rectangle'

        MDIconButton:
            icon: 'send'
            icon_size: '32sp'

        MDIconButton:
            icon: 'update'
            icon_size: '32sp'

            on_release:
                root.update()
