<Message>:
    font_size: 25
    orientation: 'vertical'
    spacing: 20
    padding: 20

    content: content

    MDLabel:
        id: content
        text: "MDLabel"
        allow_selection: True
        padding: "4dp", "4dp"

<Container>:
    font_size: 25
    orientation: 'vertical'
    spacing: 20
    padding: 20

    MDBoxLayout:
        orientation: 'horizontal'

        MDTextField:
            hint_text: 'Печатайте нежно'
            multiline: True
            mode: 'rectangle'

        MDIconButton:
            icon: 'send'
            icon_size: '32sp'
